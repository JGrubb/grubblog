<%= render "layouts/admin" %>
<article>
  <h2>
    <%= @post.title %>
  </h2>
  <div class="date">
    <%= post_date(@post.created_at)%>
  </div>

  <section class="post">
    <%= dat_render(@post.body) %>
  </section>
</article>
<% if current_user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %> | 
  <%= link_to 'Delete', @post, :confirm => "Are you sure?", method: :delete %>
<% end %>