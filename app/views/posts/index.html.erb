<% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post %></h2>
    <div class="content"><%= post.body.html_safe %></div>
    <% if current_user %>
    <p><%= link_to 'Edit', edit_post_path(post) %></p>
    <p><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></p>
    <% end %>
  </div>
<% end %>

<% if current_user %>
<%= link_to 'New Post', new_post_path %>
<% end %>