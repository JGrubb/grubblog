<h2>Get in touch!</h2>
<div id="mailer">
  <%= form_for @message, :url => contact_path do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :message %><br />
      <%= f.text_area :message %>
    </div>
    <%= f.submit "Send it" %>
  <% end %>
</div>
