<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title><%= @title %> | Johnny Grubb</title>
  <%= favicon_link_tag %>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header">
    <div class="wrapper">
      <h1><%= link_to 'Johnny Grubb', root_path %></h1>
      <p><em>Adventures in stuff</em></p>
      <div id="nav">
        <%= render "layouts/nav" %>
      </div>
    </div>
  </div>
  <div id="body">
    <div class="wrapper">
      <% if alert %><p class="notice"><%= alert %></p><% end %>
      <% if flash[:error] %><p class="errors"><%= flash[:error] %></p><% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
